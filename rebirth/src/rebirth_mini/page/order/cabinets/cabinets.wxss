page{background-color: #fff;}
.memcard{border: 1rpx solid #999; border-radius: 10rpx;padding: 30rpx;margin: 10rpx 0 20rpx 0; box-sizing: border-box; font-size: 32rpx;overflow: hidden;}
.memcard-t{font-size: 32rpx;position: relative;padding-bottom: 16rpx;}
.memcard-t span{font-size: 60rpx;float: right;margin-right: 30rpx;}
.memcard-m{font-size: 34rpx;}
.memcard-m span{font-size: 30rpx; text-decoration:line-through;}
.memcard-sele{border-radius: 10rpx;border: 1rpx solid #26cd91;padding: 30rpx;margin: 10rpx 0 20rpx 0;box-sizing: border-box;color: #26cd91;font-size: 32rpx;overflow: hidden;}
.purchasebtn{background-color: #26cd91;color: #fff;}
.tips{background-color: #eca83b;position: absolute;right: -32rpx;top: -34rpx;border-bottom-left-radius: 10rpx;font-size: 26rpx;color: #fff;padding: 2rpx 6rpx;}
.bottombtn{position: fixed;bottom: 0;background-color: #fff;width: 92%;}
.custom{padding-bottom: 200rpx;text-align: center;font-size:40rpx;line-height: 80rpx;width: 100%;}
.custombtn{display: inline-block;width: 80rpx;}
.customnumber{display: inline-block;width: 80rpx;background-color: #eee;}
.customprice{display: inline-block;font-size: 34rpx;}
.section{font-size: 32rpx;background-color: #26CD91;color: #fff; margin: 0 30rpx 50rpx;border-radius: 10rpx;}
.section__title{font-size: 30rpx;padding: 20rpx 30rpx 0 30rpx;}
.picker{padding: 20rpx 30rpx;}
.balance{font-size: 30rpx;margin-left: 60rpx;}
.state{font-size: 28rpx;text-align: center;margin: 20rpx 0;}
.state radio{transform:scale(0.8);font-size: 32rpx;}
.state span{color: #26CD91;text-decoration:underline;}
