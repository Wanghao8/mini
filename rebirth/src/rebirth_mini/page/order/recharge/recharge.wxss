.title {
  display: absolute;
  right: 0;
  margin: 20rpx 30rpx 0 0;
}

.card_bottom {
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  margin-top: 24rpx;
}

.price {
  text-align: right;
  font-size: 36rpx;
}

.price-wrapper {
  text-align: right;
  font-size: 24rpx;
}

.period {
  margin-top: 10rpx;
  text-align: right;
  padding-right: 30rpx;
  color: #66ff66;
}
.period-wrapper{
  flex: 3;
  text-align: right
}
.bottomText{margin-top: 10rpx;}
.bottomLeft{flex: 3.5;margin-left: 30rpx;}
.clear{margin: 30rpx;}
.fr{font-size: 32rpx;color: #999; float: right;}
.agree{transform:scale(0.8);font-size: 32rpx;}
.treaty{font-size: 28rpx; color: #26CD91;text-decoration:underline;}
.bottomLine{height: 1rpx;}